<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".chatpatefrags.CustomChatpateFrag">


    <ListView
        android:id="@+id/custom_chatpate_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/custom_chatpate_bottom_rl" />

    <RelativeLayout
        android:id="@+id/custom_chatpate_bottom_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp">

        <TextView
            android:id="@+id/custom_chatpate_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="Total price is: RS"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/custom_chatpate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/custom_chatpate_price_tv"
            android:layout_toEndOf="@+id/custom_chatpate_price_tv"
            tools:text="50"
            android:textSize="48sp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/custom_chatpate_ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/round_button"
            android:padding="16dp"
            android:text="Make chatpate"
            android:textColor="#ffffff" />
    </RelativeLayout>

</RelativeLayout>