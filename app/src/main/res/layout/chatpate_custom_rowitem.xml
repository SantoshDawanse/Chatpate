<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rowitem_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:gravity="center_vertical"
    android:minHeight="80dp">

    <TextView
        android:id="@+id/rowitem_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="8dp"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:text="Murai" />

    <SeekBar
        android:id="@+id/rowitem_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rowitem_title"
        android:layout_alignBottom="@+id/rowitem_title"
        android:layout_toStartOf="@+id/rowitem_checkbox"
        android:layout_toLeftOf="@+id/rowitem_checkbox"
        android:layout_toEndOf="@+id/rowitem_title"
        android:layout_toRightOf="@+id/rowitem_title"
        android:padding="8dp"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:max="3"/>

    <CheckBox
        android:id="@+id/rowitem_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="false"
        android:visibility="invisible"
        android:padding="8dp" />


</RelativeLayout>